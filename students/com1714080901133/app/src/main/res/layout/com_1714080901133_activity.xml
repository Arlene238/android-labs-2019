<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bj4">


    <TextView
        android:id="@+id/Theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="运动打卡"
        android:textSize="30dp"
        android:layout_below="@+id/camera"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="运动内容："
        android:textSize="20dp"
        android:layout_marginBottom="34dp"
        android:layout_above="@+id/info2"
        android:layout_toLeftOf="@+id/info"
        android:layout_toStartOf="@+id/info" />

    <EditText
        android:id="@+id/info"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:ems="10"
        tools:layout_editor_absoluteX="57dp"
        android:layout_alignBottom="@+id/content"
        android:layout_toLeftOf="@+id/camera"
        android:layout_toStartOf="@+id/camera" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="运动地点："
        android:textSize="20dp"
        android:layout_above="@+id/save_info"
        android:layout_alignLeft="@+id/content"
        android:layout_alignStart="@+id/content"
        android:layout_marginBottom="37dp" />

    <EditText
        android:id="@+id/info2"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:ems="10"
        tools:layout_editor_absoluteX="57dp"
        android:layout_alignBaseline="@+id/address"
        android:layout_alignBottom="@+id/address"
        android:layout_toRightOf="@+id/address"
        android:layout_toEndOf="@+id/address" />

    <Button
        android:id="@+id/save_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="运动打卡"
        android:background="#CDB5CD"
        android:minHeight="40dp"
        android:minWidth="80dp"

        android:textSize="15dp"
        android:layout_alignBaseline="@+id/read_info"
        android:layout_alignBottom="@+id/read_info"
        android:layout_alignLeft="@+id/info2"
        android:layout_alignStart="@+id/info2" />

    <Button
        android:id="@+id/read_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="打卡记录"
        android:background="#CDB5CD"
        android:textSize="15dp"
        android:minHeight="40dp"
        android:minWidth="80dp"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/info2"
        android:layout_alignEnd="@+id/info2" />


    <TextView
        android:id="@+id/network"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击此处浏览更多运动场图片"
        android:layout_marginBottom="18dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/next"
        android:layout_toStartOf="@+id/next" />
    <Button
        android:id="@+id/camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:onClick="camera"
        android:background="@drawable/camare"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
    </Button>

    <ImageView
        android:id="@+id/img_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/save_info"
        android:layout_alignLeft="@+id/save_info"
        android:layout_alignStart="@+id/save_info"
        android:layout_toLeftOf="@+id/camera"
        android:layout_toStartOf="@+id/camera" />

    <Button
        android:id="@+id/previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/zuo"
        android:layout_marginBottom="47dp"
        android:layout_above="@+id/network"
        android:layout_toLeftOf="@+id/Theme"
        android:layout_toStartOf="@+id/Theme" />

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/you"
        android:layout_alignBaseline="@+id/previous"
        android:layout_alignBottom="@+id/previous"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>