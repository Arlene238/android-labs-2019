<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF68F"
    android:paddingTop="12dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="20dp"
        android:background="#FFFFE0"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/touxiang"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/abcd"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#454545"
                android:text="哥哥是我的天"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/weibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微博名：哥哥是我的天啊"
                android:textColor="#454545"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/nichen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="爱豆昵称：心肝宝贝"
                android:textColor="#454545"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/bt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0.1dp"
            android:background="#FFFFE0"
            android:gravity="left"
            android:paddingTop="12dp"
            android:text="设置备注和标签"
            android:textColor="#454545"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/bt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFE0"
            android:gravity="left"
            android:layout_marginTop="2dp"
            android:paddingTop="12dp"
            android:textColor="#454545"
            android:text="性别：女"
            android:textSize="20sp" />


    </LinearLayout>

    <Switch
        android:id="@+id/switch1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Switch" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:paddingTop="12dp">

        <TextView
            android:id="@+id/bt3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0.1dp"
            android:background="#FFFFE0"
            android:gravity="left"
            android:paddingTop="12dp"
            android:textColor="#454545"
            android:text="追星时长：1年"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/bt4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="#FFFFE0"
            android:gravity="left"
            android:paddingTop="12dp"
            android:textColor="#454545"
            android:text="类型：妈妈粉"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/bt5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFE0"
            android:gravity="left"
            android:paddingTop="12dp"
            android:layout_marginTop="2dp"
            android:textColor="#454545"
            android:text="超话级别：粉丝大咖"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/bt6"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#FFFFE0"
            android:gravity="left"
            android:paddingTop="12dp"
            android:layout_marginTop="2dp"
            android:textColor="#454545"
            android:text="个性签名：哥哥是糖，哥哥是药，哥哥是我的羽绒外套"
            android:textSize="20sp" />
    </LinearLayout>



    <Button
        android:id="@+id/bt7"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#FFD700"
        android:gravity="center"
        android:textColor="#454545"
        android:text="爱豆欣赏"
        android:textSize="20sp"
        android:layout_alignParentBottom= "true"/>

</LinearLayout>