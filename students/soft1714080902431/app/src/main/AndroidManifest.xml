            android:name=".Soft1714080902431Activity"
            android:label="@string/title_activity_soft1714080902431"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".ImageActivity$ImageActivity" />
        <provider
            android:authorities="soft1714080902431.cameraalbumtest,fileprovider"
            android:name="android.support.v4.content.FileProvider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
