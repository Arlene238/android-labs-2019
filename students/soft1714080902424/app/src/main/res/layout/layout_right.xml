<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/chat_right_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#f5f5f5"
        android:paddingTop="5dp"
        android:text="2019/5/8   12:10:13"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/chat_right_message"
            android:layout_width="256dp"
            android:layout_height="57dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="can i help me ?"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="88dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/chat_right_image"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:src="@drawable/head_portrait_mine" />

            <TextView
                android:id="@+id/chat_right_name"
                android:layout_width="71dp"
                android:layout_height="31dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:text="waiking"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>