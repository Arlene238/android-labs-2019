<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fbackgroud"
    tools:context=".Soft1714080902401_meActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:layout_alignParentTop="true"
        android:background="@android:color/colorblue">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="96dp"
            android:layout_height="112dp"
            app:srcCompat="@drawable/touxiang" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/space0"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@android:color/colorblue"/>

            <TextView
                android:id="@+id/name0"
                android:layout_width="58dp"
                android:layout_height="37dp"
                android:text="用户名:"
                android:background="@android:color/colorwhile"/>

            <TextView
                android:id="@+id/qianmi0"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:text="签名:" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/space1"
                android:layout_width="match_parent"
                android:layout_height="31dp" />

            <TextView
                android:id="@+id/name"
                android:layout_width="171dp"
                android:layout_height="37dp"
                android:text="hmp" />

            <TextView
                android:id="@+id/qianmi"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:text="正因为生来什么都没有，因此我们能拥有一切!" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="113dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/space3"
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <Button
                android:id="@+id/buttonLocalpic"
                android:layout_width="wrap_content"
                android:layout_height="37dp"

                android:text="调用相册" />

            <Button
                android:id="@+id/buttonCamerapic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="调用相机" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/colorwhite">
        <Button
            android:id="@+id/Begin1"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="首页"
            android:layout_width="0dp" />
        <Button
            android:id="@+id/Begin"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="浏览"
            android:layout_width="0dp" />
        <Button
            android:id="@+id/Begin2"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="我"
            android:layout_width="0dp" />
    </LinearLayout>

</RelativeLayout>