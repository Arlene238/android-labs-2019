<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4B5D6D"
    tools:context=".Main2Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1000dp">
            <RelativeLayout
                android:id="@+id/top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    >

                <TextView
                    android:paddingLeft="110dp"
                    android:id="@+id/best"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="40dp"
                    android:text="本周最佳"/>
                <ImageView
                    android:id="@+id/firstgame"
                    android:layout_weight="1000"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_below="@+id/best"/>


                <Button
                    android:onClick="click"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="更新"
                    android:background="@drawable/btn_3"
                    android:textColor="#4FA5D3"
                    android:layout_toRightOf="@+id/firstupdate"
                    android:layout_below="@+id/firstgame"
                    />
                    <EditText
                        android:id="@+id/firstupdate"
                        android:layout_width="320dp"
                        android:layout_height="50dp"
                        android:hint="请输入图片"
                        android:singleLine="true"
                        android:layout_below="@+id/firstgame"/>
            </RelativeLayout>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/first"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_below="@+id/top"
                >


                <RelativeLayout
                    android:id="@+id/dmc"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/view1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="ShowToast"
                        android:src="@drawable/timg" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_toRightOf="@+id/dmc"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/view2"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:onClick="ShowToast"
                        android:src="@drawable/timgg" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/dmc">

                    <ImageView
                        android:id="@+id/view3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="ShowToast"
                        android:src="@drawable/sekiro" />


                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/first">

                <RelativeLayout
                    android:id="@+id/one"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="ShowToast"
                        android:src="@drawable/zd" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="134dp"
                    android:layout_below="@+id/one"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="ShowToast"
                        android:src="@drawable/hun" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/one"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="500dp"
                        android:onClick="ShowToast"
                        android:src="@drawable/creed" />

                </RelativeLayout>

            </RelativeLayout>
        </RelativeLayout>

    </ScrollView>
</RelativeLayout>